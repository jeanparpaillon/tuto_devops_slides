{
  "name": "formation-devops",
  "type": "module",
  "private": true,
  "scripts": {
    "readme": "pandoc README.md -f gfm -t pdf -s -o README.pdf",

    "dev:dev": "slidev slides/formation-dev.md",
    "dev:prod": "slidev slides/formation-prod.md",

    "build:dev": "slidev build slides/formation-dev.md --out dist/formation-dev",
    "build:prod": "slidev build slides/formation-prod.md --out dist/formation-prod",

    "export:dev": "slidev export slides/formation-dev.md --output pdf/formation-dev.pdf",
    "export:prod": "slidev export slides/formation-prod.md --output pdf/formation-prod.pdf",

    "dev": "echo 'Usage: pnpm dev:{ dev | prod }'",
    "build": "echo 'Usage: pnpm build:{ dev | prod }'",
    "export": "echo 'Usage: pnpm export:{ dev | prod }'"
  },
  "dependencies": {
    "@slidev/cli": "^52.4.0",
    "@slidev/theme-default": "latest",
    "@slidev/theme-seriph": "latest",
    "slidev-theme-the-unnamed": "^0.0.22",
    "vue": "^3.5.22"
  }
}
